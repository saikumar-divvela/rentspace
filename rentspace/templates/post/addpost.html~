<script type="text/javascript">
$(document).ready(
    function(){
    $("button").click(
        function() {
            if ( $(this).attr("id") == "cancel") {
                 alert($(this).attr("id"))   
                 $("#form1").attr("action","http://localhost:8000/posts/");
                 $("#form1").attr("method","get");
            } else if ( $(this).attr("id") == "submit") {
                alert($(this).attr("id"))
                 $("#form1").attr("action","http://localhost:8000/addpost/");
                 $("#form1").attr("method","post");
            }

            $("#form1").submit();
        });
});

</script>


