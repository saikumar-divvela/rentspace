{% include "footer.html" %}
</div>

<div class="container">
    <form id ="form1" role="form">
        {{ msg }} <br/>   
        <h4>Update Post </h4>
        <div class="form-group">
        <label for="description">Description:</label><br/>
         <input type="hidden"  id="postid" name="description" value={{ post.description }}><br/>
        <input type="text"  id="description" name="description" value={{ post.description }}><br/>
        </div>
        <button id="update" type="submit" class="btn btn-info">Update</button>
        <button id="cancel" type="submit" class="btn btn-info">Cancel</button>      
    </form>


</div>


